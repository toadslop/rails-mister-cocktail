<% if @cocktail.doses.nil? %>
  <h3>Add ingredients and amounts for <%= @cocktail.name %></h3>
<% else %>
  <h3>Add another ingredient to <%= @cocktail.name %>? <%= link_to "no", cocktail_path(@cocktail.id), class: "btn btn-primary" %></h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> <%= dose.description %></li>
    <% end %>
  </ul>
<% end %>
<%= render partial: 'form' %>
